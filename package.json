{
  "name": "mishka-27",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.4.0",
    "browser-sync": "2.27.7",
    "del": "7.0.0",
    "gulp": "4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-html-bemlinter": "2.1.3",
    "gulp-htmlmin": "^5.0.1",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-stacksvg": "2.0.0",
    "gulp-svgmin": "4.1.0",
    "gulp-terser": "^2.1.0",
    "gulp-w3c-html-validator": "5.2.0",
    "postcss": "8.3.11",
    "postcss-csso": "^6.0.1",
    "stylelint": "13.13.1",
    "stylelint-config-htmlacademy": "0.1.11"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "w3c": "gulp validateMarkup --series --silent",
    "bemlint": "gulp lintBem --series --silent",
    "lint": "npm run editorconfig && npm run stylelint && npm run w3c && npm run bemlint",
    "build": "gulp build",
    "start": "gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "not < 0.25%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": "^16"
  },
  "type": "module"
}
